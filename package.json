{
  "name": "ai-lab",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.4.5",
      "dotenv": "^17.2.2",
      "@prisma/client": "^7.0.1"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:gateway": "turbo -F gateway dev",
    "db:push": "turbo -F @ai-lab/db db:push",
    "db:studio": "turbo -F @ai-lab/db db:studio",
    "db:generate": "turbo -F @ai-lab/db db:generate",
    "db:migrate": "turbo -F @ai-lab/db db:migrate",
    "db:start": "turbo -F @ai-lab/db db:start",
    "db:watch": "turbo -F @ai-lab/db db:watch",
    "db:stop": "turbo -F @ai-lab/db db:stop",
    "db:down": "turbo -F @ai-lab/db db:down"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.8",
    "ultracite": "6.3.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "@types/bun": "^1.2.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}
